<!-- 
Index page, the "default" page when you visit "http://localhost/" 
 without any URL parameters at the end
 -->
{% extends 'base.jinja' %}


{% block content %} 

    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: darkblue;
        }
        
        h1 {
            color: #333;
            justify-content: center;
        }
        
        p {
            margin-bottom: 20px;
        }
        
        a {
            background-color: #f44336;
            border: none;
            color: white;
            padding: 30px 30px;
            text-align: center;
            text-decoration: none;
            font-size: 20px;
            cursor: pointer;
            border-radius: 4px;
        }
        
        a:hover {
            background-color: #d32f2f;
        }

        .signup-container {
            width: 500px;
            margin: auto auto;
            padding: 200px;
            background-color: #fff;
            border-radius: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
            justify-content: center;
            display: flex;
            justify-content: space-around;
            flex-direction: column;
            align-items: center;
            gap: 30px;
        }

        .button-container {
            display: flex;
            justify-content: space-between;
            flex-direction: row;
            gap: 40px;
            justify-content: center;
        }

    </style>
    <div class="signup-container">
        <h1>Hello! Welcome to the site!</h1>
        <div class="button-container">
            <p><a href={{ url_for('signup') }}> Sign Up</a></p>
            <p><a href={{ url_for('login') }}> Login</a></p>
        </div>
    </div>
    
{% endblock %}
